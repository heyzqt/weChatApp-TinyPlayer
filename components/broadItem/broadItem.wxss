/* components/broadItem/broadItem.wxss */
.broad-item-box {
  width: 320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.broad-item-box::after {
  content: "";
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  z-index: 0;
}

.channel-name {
  color: #fff;
  font-size: 40rpx;
  position: relative;
  z-index: 1;
}